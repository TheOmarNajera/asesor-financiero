# ============================================
# ASESOR PYME INTELIGENTE - Variables de Entorno
# ============================================

# Configuración del Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Empresa por Defecto
DEFAULT_EMPRESA_ID=E001

# Configuración de Datos
# Para desarrollo rápido, usa datos de ejemplo (true)
# Para producción, usa datos reales de Snowflake (false)
USE_SAMPLE_DATA=true
SKIP_EXCEL_LOADING=true

# ============================================
# Snowflake Data Cloud
# ============================================
# Obtén estos valores desde tu cuenta de Snowflake

# Información de conexión
SNOWFLAKE_ACCOUNT=your_account.snowflakecomputing.com
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password

# Configuración de warehouse y base de datos
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=PYME_FINANCIAL
SNOWFLAKE_SCHEMA=PUBLIC

# Configuración opcional
SNOWFLAKE_ROLE=ACCOUNTADMIN
SNOWFLAKE_REGION=us-west-2

# ============================================
# Google Gemini AI
# ============================================
# Obtén tu API key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# ElevenLabs Voice Synthesis
# ============================================
# Obtén tu API key en: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================
# Frontend (React)
# ============================================
# URL del backend para el frontend
REACT_APP_API_URL=http://localhost:8000